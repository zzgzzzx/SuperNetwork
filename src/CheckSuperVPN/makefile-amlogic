BIN = ./bin/CheckSuperVPN 
CROSS = arm-linux-gnueabihf-
CC = $(CROSS)gcc  
CPP = $(CROSS)g++  
LD = $(CROSS)ld
STRIP=$(CROSS)strip

DEFINC = -I../../include -I../../include/cJson -I/usr/include/curl -I../../include/SRV
INCS += $(DEFINC)  

CSRCS = $(wildcard ./*.c ./../*.c)  
CPPSRCS = $(wildcard ./*.cpp ./../*.cpp)  
 
COBJS := $(CSRCS:.c=.o)  
CPPOBJS := $(CPPSRCS:.cpp=.o)  

CFLAGS += $(INCS)  
CFLAGS += -w -o2 -Wall -g -fPIC  

CPPFLAGS += $(INCS)  
CPPFLAGS += -w -o2 -Wall -g -fPIC  

LDFLAGS += -L/home/zhangzx/amlogic/curl/lib -lcurl -pthread
  
all:$(BIN)  
$(COBJS) : %.o: %.c  
	$(CC) $(CFLAGS) -c $< -o $@   
$(CPPOBJS) : %.o: %.cpp  
	$(CPP) $(CPPFLAGS) -c $< -o $@   
  
$(BIN) : $(COBJS) $(CPPOBJS)  
	$(CPP) -o $(BIN) $(COBJS) $(CPPOBJS) $(LDFLAGS) $(LIBS)
	$(STRIP) $(BIN)
	rm $(COBJS)  
	rm $(CPPOBJS)  

.PHONY:clean cleanall  
 
clean:              
	rm $(BIN) #$(COBJS) $(CPPOBJS)  
 
cleanall:  
	rm $(BIN) $(COBJS) $(CPPOBJS)  
	-rm $(OBJS) $(TARGET)